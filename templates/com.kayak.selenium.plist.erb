<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple Computer//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
      <key>EnvironmentVariables</key>
      <dict>
        <key>PATH</key>
        <string>/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/bin</string>
        <key>LANG</key>
        <string>en_US.UTF-8</string>
      </dict>
    <key>Label</key>
    <string>com.kayak.selenium</string>
    <key>OnDemand</key>
    <false/>
    <key>ProgramArguments</key>
    <array>
      <string>java</string>
      <string>-jar</string>
      <string><%= scope.lookupvar('conf::install_dir') %>/selenium-server-standalone.jar</string>
      <string>-role</string>
      <string>node</string>
      <string>-nodeConfig</string>
      <string><%= scope.lookupvar('conf::install_dir') %>/conf/nodeConfig.json</string>
    </array>
    <key>RunAtLoad</key>
    <true/>
    <key>ServiceDescription</key>
    <string>Selenium Node Service</string>
    <key>ServiceIPC</key>
    <false/>
  </dict>
</plist>
